{
  "manifest_version": 2,
  "name": "Disengaged - TESTING SLASH COMMAND BUILDS",
  "short_name": "Disengaged - TEST BUILDS",
  "version": "0.3.0",
  "description": "I'M TESTING SLASH COMMANDS",
  "homepage_url": "https://github.com/a13o/disengaged",
  "icons": {
    "48": "icons/icon_48_on.png",
    "96": "icons/icon_96_on.png"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "disengaged@a13o.com",
      "strict_min_version": "59.0"
    }
  },
  "browser_action": {
    "browser_style": true,
    "default_popup": "src/popup.html",
    "default_icon": "icons/icon_48_on.png",
    "default_title": "Disengaged"
  },
  "options_ui": {
    "page": "src/options.html",
    "open_in_tab": true,
    "browser_style": true
  },
  "background": {
    "scripts": [
      "src/background.js"
    ]
  },
  "permissions": [
    "tabs"
  ],
  "optional_permissions": [
    "*://*.news.ycombinator.com/*",
    "*://*.reddit.com/*",
    "*://*.twitter.com/*",
    "*://*.youtube.com/*"
  ]
}
